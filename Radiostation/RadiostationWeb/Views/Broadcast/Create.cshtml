@model CreateBroadcastViewModel
<div class="main-container">
    <div class="formContainer">
        <h1 class="title">Add broadcast</h1>
        <form asp-action="Create" asp-controller="Broadcast" method="post" class="form">
            <div class="select-container">
                <label>Employee</label>
                <select class="select-items" asp-for="@Model.EmployeeId" asp-items="@Model.EmployeeList"> <option value="" disabled selected>Select  Employee</option></select>
                <label>Record</label>
                <select class="select-items" asp-for="@Model.RecordId"  asp-items="@Model.RecordList" > <option value="" disabled selected>Select  Record</option></select>
            </div>
            <label>Date and time</label>
            <input class="inputStyle" asp-for="@Model.DateAndTime" type="datetime-local" min="2016-06-01T08:30" placeholder="Date and time">
            <input type="submit" class="addRecordbtn" value="Add">
        </form>
        <p class="success-message">@ViewData["SuccessMessage"]</p>
        <div class="error-box" asp-validation-summary="All"></div>
    </div>
</div>

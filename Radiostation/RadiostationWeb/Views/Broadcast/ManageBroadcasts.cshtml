@model PageItemsModel<BroadcastViewModel>
@addTagHelper *, RadiostationWeb
@inject RadiostationWeb.Data.RadiostationWebDbContext context;
@{
    ViewData["Title"] = "Broadcasts";
}


<div class="main-container">
    <div class="container-item">
        <h2 class="title">Broadcasts</h2>
        <div class="crudBtn"><a class="crudLink" asp-controller="Broadcast" asp-action="Create"> Add broadcast</a></div>
        @if (@Model?.Items?.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Employee Name</th>
                        <th>Employee Surname</th>
                        <th>Date and time</th>
                        <th>Record name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var broadcast in Model.Items)
                    {
                        <tr>
                            <td>@broadcast.EmployeeName</td>
                            <td>@broadcast.EmployeeSurname</td>
                            <td>@broadcast.DateAndTime</td>
                            <td>@broadcast.RecordName</td>

                            <td>
                                <div class="manage-button-container">
                                    <div class="crudBtn"><a class="crudLink" asp-controller="Broadcast" asp-action="Edit" asp-route-id="@broadcast.Id">Edit</a></div>
                                    <div class="crudBtn"><a class="crudLink" asp-controller="Broadcast" asp-action="Delete" asp-route-id="@broadcast.Id">Delete</a></div>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <div class="pages-container"><page-link page-model="Model.PageModel" page-action="ManageBroadcasts"></page-link></div>

        }
        else
        {
            <h3>There are no broadcasts</h3>
        }

    </div>
</div>

@model Broadcast
@inject RadiostationWeb.Data.RadiostationWebDbContext context;
@{
    var records = context.Records.Select(c => new SelectListItem { Value = c.Id.ToString(), Text = c.СompositionName })
    .ToList();
}
<div class="main-container">
    <div class="formContainer">
        <h1 class="title">Edit broadcast</h1>
        <form asp-action="Edit" asp-controller="Broadcast" method="post" class="form">
            <input asp-for="@Model.Id" type="hidden" />
            <div class="select-container">
                <label>Employee</label>
                <select class="select-items" asp-for="@Model.EmployeeId"> <option value="" disabled selected>Select  Employee</option></select>
                <label>Record</label>
                <select class="select-items" asp-for="@Model.RecordId"> <option value="" disabled selected>Select  Record</option></select>
            </div>
            <label>Date and time</label>
            <input class="inputStyle" asp-for="@Model.DateAndTime" type="datetime-local" min="2016-06-01T08:30" placeholder="Date and time">
            <input type="submit" class="addRecordbtn" value="Edit">
        </form>
        <p class="success-message">@ViewData["SuccessMessage"]</p>
        <div class="error-box" asp-validation-summary="All"></div>
    </div>
</div>

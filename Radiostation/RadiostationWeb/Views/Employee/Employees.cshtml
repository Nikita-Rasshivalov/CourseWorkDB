@model IEnumerable<RadiostationDAL.Entities.Employee>
<div class="all-container">
    <div class="info-container">
        <div class="container-item">
            <h1>Employees</h1>
        </div>
        <div class="container-item">
            @if (@Model?.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Middlename</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var empl in @Model)
                        {
                            <tr>
                                <td>@empl.Name</td>
                                <td>@empl.Surname</td>
                                <td>@empl.Middlename</td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>There are no employees </h3>
            }
        </div>
    </div>
</div>


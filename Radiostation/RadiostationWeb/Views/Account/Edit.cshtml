@model RadiostationWeb.Data.ApplicationUser
@using Microsoft.AspNetCore.Identity;
@inject RoleManager<IdentityRole> RoleManager
@{
    
        ViewData["Title"] = "Edit account";
    
    var roles = RoleManager.Roles.Select(c => new SelectListItem { Value = c.Name, Text = c.Name })
        .ToList();
}
<div class="main-container">
    <div class="header-item">
        <h1 class="title">Edit user</h1>
        <form asp-action="Edit" asp-controller="Account" method="post" class="form">
            <input asp-for="Id" value="@Model.Id" hidden />
            <input asp-for="UserName" value="@Model.UserName" class="inputStyle" placeholder="Username" />
            <input asp-for="Email" value="@Model.Email" class="inputStyle" placeholder="Email" />
            <input asp-for="Name" value="@Model.Name" class="inputStyle" placeholder="Name" />
            <input asp-for="Surname" value="@Model.Surname" class="inputStyle" placeholder="Surname" />
            <input asp-for="MiddleName" value="@Model.MiddleName" class="inputStyle" placeholder="Middle Name" />
            <div class="formButtons">
                <input type="submit" class="addRecordbtn" value="Edit">
            </div>
        </form>
        <p class="success-message">@ViewData["SuccessMessage"]</p>
        <div class="error-box" asp-validation-summary="All"></div>
    </div>
</div>

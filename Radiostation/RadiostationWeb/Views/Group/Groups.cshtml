@model IEnumerable<RadiostationDAL.Entities.Group>
<div class="all-container">
    <div class="info-container">
        <div class="container-item">
            <h1>Groups</h1>
        </div>
        <div class="container-item">
            @if (@Model?.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var group in @Model)
                        {
                            <tr>
                                <td>@group.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>There are no Group </h3>
            }
        </div>
    </div>
</div>

